{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "secondary_prompt": {
    "background": "transparent",
    "foreground": "#ffffff",
    "template": "-> "
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        // {
        //   "type": "os",
        //   "style": "powerline",
        //   "powerline_symbol": "\ue0b0",
        //   "foreground": "#fff",
        //   "background": "#003543",
        //   "template": " {{.Icon}} ",
        //   "properties": {
        //     "windows": "\ue62a "
        //   }
        // },
        // {
        //   "type": "time",
        //   "style": "powerline",
        //   "powerline_symbol": "\ue0b0",
        //   "foreground": "#fff",
        //   "background": "#B4009E",
        //   "template": "<#fff> \uf64f </>{{ .CurrentDate | date .Format }} "
        // },
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#EFDCF9",
          "background": "#4c1f5e",
          "template": " {{ .FormattedMs }} ",
          "properties": {
            "always_enabled": false
          }
        },
        {
          "type": "az",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#000000",
          "background": "#008AD7",
          "template": " \ufd03 {{ .Name }} "
        },
        {
          "type": "kubectl",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#000000",
          "background": "#22da6e",
          "background_templates": [
            "{{if contains \"blue\" .Context}}#0081d7{{end}}",
            "{{if contains \"green\" .Context}}#288d16{{end}}",
            "{{if contains \"white\" .Context}}#FFFFFF{{end}}",
            "{{if contains \"red\" .Context}}#FF0000{{end}}"
          ],
          "template": " \u2388 {{.Context}}{{if .Namespace}}::{{.Namespace}}{{end}} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#193549",
          "background": "#91ddff",
          "template": " \ue5ff {{ .Path }} ",
          "properties": {
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#193549",
          "background": "#5eff96",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#F07623{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}blue{{ end }}",
            "{{ if gt .Ahead 0 }}red{{ end }}",
            "{{ if gt .Behind 0 }}red{{ end }}"
          ],
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} üîì<#6031b1> {{ .Working.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}‚úÖ <#096a09>{{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }}",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "branch_behind_icon": " ‚Üì",
            "branch_ahead_icon": " ‚Üë",
            "branch_max_length": 25,
            "branch_identical_icon": " ‚â°",
            "merge_icon": " Óúß",
            "tag_icon": "Ôêí",
            "cherry_pick_icon": "Óäõ",
            "commit_icon": "Ôêó",
            "rebase_icon": "Óú®",
            "branch_icon": " ÓÇ†",
            "revert_icon": "ÔÉ¢",
            "no_commits_icon": "Ôñî",
            "branch_gone_icon": "‚â¢",
            "github_icon": "Ôêà",
            "azure_devops_icon": "ÓØ®"
          }
        }
      ]
    }
  ]
}
